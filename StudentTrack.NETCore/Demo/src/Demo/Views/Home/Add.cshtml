@model Demo.Models.TodoItemIndexModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-group" style="margin-bottom: 20px">
        @Html.LabelFor(model => model.TemplateItem.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.TemplateItem.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TemplateItem.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px">
        @Html.LabelFor(model => model.TemplateItem.Category, htmlAttributes: new { @class = "control-label col-md-2" })
        <br />
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TemplateItem.Category, Model.DropdownCategories, "--- Select Category ---", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TemplateItem.Category, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px">
        @Html.LabelFor(model => model.TemplateItem.IsDone, htmlAttributes: new { @class = "control-label col-md-2" })
        <br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.TemplateItem.IsDone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TemplateItem.IsDone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <div class="col-md-offset-2 col-md-10" style="margin-top: 20px">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </div>
}